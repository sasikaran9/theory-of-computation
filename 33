#include <stdio.h>
#include <stdbool.h>

// DFA transition function
int transition(int state, char input) {
    switch (state) {
        case 0:
            if (input == '0') return 1;
            else return 3;
        case 1:
            if (input == '0') return 1;
            else if (input == '1') return 2;
            else return 3;
        case 2:
            return 3; // Dead state (no valid transitions from the accept state)
        default:
            return 3; // Dead state
    }
}

// DFA simulation function
bool simulateDFA(const char *input) {
    int currentState = 0;
    for (int i = 0; input[i] != '\0'; i++) {
        currentState = transition(currentState, input[i]);
    }
    return currentState == 2; // Accept state
}

int main() {
    char input[100];
    printf("Enter a string: ");
    scanf("%s", input);

    if (simulateDFA(input)) {
        printf("Accepted\n");
    } else {
        printf("Rejected\n");
    }

    return 0;
}
